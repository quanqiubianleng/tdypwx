/* packageA/approval/details/details.wxss */
page{
  background: #F5F5F5;
}
.tle{
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.card{
  margin-top: 30rpx;
  background: #fff;
  border-radius: 15rpx;
  padding: 0rpx 30rpx;
  padding-bottom: 20rpx;
}
.name{
  margin-top: 15rpx;
  font-size: 30rpx;
  color: #999999;
}

.id-name{
  float: left;
  width: 25%;
}
.id-names{
  height: 200rpx;
  line-height: 200rpx;
}
.name-te{
  float: right;
  width: 75%;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content: left;
  vertical-align: middle;
}
.name-tes{
  float: right;
  width: 75%;
}
.name-tes textarea{
  color: #333333;
}
 .text{
  padding: 2rpx 15rpx;
  border-radius: 10rpx;
  background: #F3F6FA;
  margin-right: 20rpx;
  font-size: 26rpx;
}
.on{
  background: #3B66B0;
  color: #fff;
}
.name-tes textarea{
  padding: 10rpx;
  height: 150rpx;
  width: 100%;
  background: #F3F6FA;
  font-size: 24rpx;
}
.name-img{
  float: left;

}
.name-img image{
  width: 230rpx;
  height: 200rpx;
  margin-right: 15rpx;
}
.bottom{
  position: fixed;
  z-index: 99999;
  bottom: 20rpx;
  left: 0rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  background: #FF4E50;
  margin-top: 30rpx;
}

