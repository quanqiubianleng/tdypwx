/* pages/message/index/index.wxss */
page{
  background: #F8F9FA
}
.msgGroup{
  background: white;
  margin-top: 16rpx;
}
.msgGroup .msgItem{
  width: 100%;
  height: 116rpx;
  border-bottom: 1rpx solid #eee;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.msgGroup .msgItem:last-child{
  border: none
}
.msgItem .inBox{
  width: inherit;
  height: inherit;
  position: relative
}
.msgItem .inBox .mainIcon{
  position: absolute;
  width: 68rpx;
  height: 68rpx;
  left: 0;
  top: 50%;
  transform: translateY(-34rpx)
}
.msgItem .inBox .badge{
  position: absolute;
  right: 64rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 0 16rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  background: red;
  color: white;
  z-index: 99;
  border-radius: 24rpx;
}
.msgItem .inBox .iconOpen{
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.msgItem .inBox text{
  line-height: 116rpx;
  padding-left: 96rpx;
  font-size: 32rpx
}


.msg-bage{
  position: absolute;
  right: 40rpx;
  display: inline-block;
  background: red;
  padding: 4px;
  color: #fff;
  border-radius: 59%;
  font-size: 28rpx;
  top: 30rpx;
}