.box-bill-name{
  margin-bottom: 10rpx;
}
.name{
  overflow: hidden;
  white-space: nowrap;
  text-align: left;
  font-size: 28rpx;
  font-weight: 600;
}
.num{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: right;
  font-size: 28rpx;
  font-weight: 600;
  color: #F5A932;
}
.type{
  text-align: left;
  color: #666F83;
  font-size: 24rpx;
}

.fei view{
  float: right;  
  border-radius: 5rpx;
  padding: 2rpx 15rpx;

}
.fei view text{
  display: inline-block;
  font-size: 22rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  border: 1rpx solid #F5A932;
}
.fei-tel{
  background: #F5A932;
  border: 1rpx solid #F5A932;
  color: #fff;
  height: 38rpx;
  line-height: 38rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
 border-radius: 5rpx 0 rpx 0 5rpx;
}
.tags-box{
  overflow:hidden;
}
.tags-list{
  margin-right: 5rpx;
}
.details{
  float: right;
  background: #F5A932;
  color: #fff;
  padding: 3rpx 5rpx;
  text-align: center;
 font-size: 22rpx;
 border-radius: 10rpx;
}
.footer{
  float: right;
  width: 160rpx;
  height: 50rpx;
  background: #C4D1E7;
  position: fixed;
  top:65%;
  right: 0rpx;
  border-radius: 50rpx 0 0 50rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content: center;
  vertical-align: middle;
}
.footer text{
  color: #F4F6FA;
  font-size: 24rpx;
  margin-right: 8rpx;
}
.footer image{
  width: 30rpx;
  height: 30rpx;
}
.null{
  margin-top: 30rpx;
  text-align: center;
  color: #999999;
  padding-bottom: 50rpx;
}
.null image{
  width: 100%;
  height: 380rpx;
}
