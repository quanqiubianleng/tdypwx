page{
  width: 100%;
  height:100%;
  /* background: #ccc; */
  background:#F5F5F5 ;
}

.wraper{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}

.header{
  color: #fff;
  position: fixed;
  flex-direction: row;
  z-index: 9999;
  width: 100%;
  top: 0rpx;
  left: 0rpx;
}

.search-box{
  background: #fff;
}
.search{
  height: 80rpx;
  padding:15rpx 0rpx;
}
.city {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  text-align: center;
}
.city-text{
  color: #333;
}
.xiala {
  position: absolute;
  top: -45rpx;
  transform: translatex(58rpx);
}
.search-input{
  background: #E9E9E9;
  border-radius: 15rpx;
  height: 50rpx;
}
.search-input view{
  height: 50rpx;
  line-height: 50rpx ;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}
.search-inc{
  display:inline-block;
  margin-left: 50rpx;

  height: 50rpx;
  
}
.search-inc image{
  padding: 5rpx;
  background: #E9E9E9;
  border-radius: 50%;
  float: left;
  width: 45rpx;
  height: 45rpx;
}
