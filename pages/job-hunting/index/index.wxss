/* 百万红包 */
.hongbei{
  width:100%;    
  height:350rpx;
  background-size: 100% 100%;

}
.hongbei-num{
  float: left;
  width: 100%;
  margin-top: 138rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.hongbei-num text{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #F6F1E9;
  border-radius: 5rpx;
  margin-left: 20rpx;
  color: #333;
  font-weight: bold;
}
.hongbt{
  height: 65rpx;
  width: 65%;
  margin-left: 17.5%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to top,#F5EA93,#FFFEFB);
  border-radius: 50rpx;
}
.hongbt text{
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-right: 2rpx;
}
.hongtime{
  text-align: center;
  margin-top: 30rpx;
  font-size: 24rpx;
 color: #FFFC69;
 letter-spacing: 1rpx;
}
/* banner结束 */
/* 滚动公告开始*/
.notice{
  background: #fff;
  padding-left: 32rpx;
  padding-top: 15rpx;
}
.swiper_container {
  display: inline-block;
  height: 45rpx;
  line-height: 45rpx;
  width: 90%;
  margin-left: 10rpx;
}
.swiper_item {
font-size: 30rpx;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
color: #666666;
}
/* 滚动公告结束*/


.menu{
  background-color: #ffffff;
  height: auto;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}
.menu-type-tetl{
  color: #666;
  font-size: 32rpx;
  margin-top: 15rpx;
}
.menu_container {
  width: 100%;
}

.menu_item {
  width: 25%;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  box-sizing: border-box;
  padding-bottom: 10px;
  padding-top: 10px;
}
.menu_icon {
  width: 38px;
  height: 38px;
  padding-bottom: 5px;
}
.menu_name{
  font-size: 24rpx;
}
.nav-boxz{
  height: 150rpx;
}
.nav{
  height: 150rpx;
}
.nav image{
  height: 150rpx;
  width: 100%;
}
.Hot{
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  background: #fff;
  box-shadow: 0px 4px 4px 0px #F2F9FE;
}
.navs {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  overflow:hidden;
}
.navs::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  }
.nav-item {
  width:auto;
  margin:0 25rpx ;
  padding: 0 15rpx;
  display: inline-block;
  text-align: center;
  color: #A9A9A9;
}
.nav-item.active{
  border-bottom: solid 4rpx #EE754F;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 75rpx;
  color: #EE754F;
}
.main{
  flex: 1;
  margin-top:80rpx ;
  position: relative;
}

.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.main-list{
  width: 100%;
}
.box-box{
  background: #fff;
  margin-top: 5rpx;
}
.box{
  margin-top: 20rpx;
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 10rpx;
  height: auto;
}
.box-img{
  height: 129rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content: center;
  vertical-align: middle;
  height: auto;
}
.box-img image{
  width: 172rpx;
  height: 129rpx;
}
