}
.textarea{
  color: #e2e2e2;
}
/* 下拉选择 */
.select_box {
  background: #F3FBFE;
  text-align: center;
  width: 100%;
  margin: 0 auto;
  margin-top: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;

  /* padding: 0 20rpx; */
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: #333;
  line-height: 50rpx;
  text-align: center;
  height: 50rpx;
  border: 1rpx solid #3C67B1;
  border-radius: 15rpx;
  color: #999999;
}



.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  z-index: 8888;
  top: 50rpx;
  width: 100%;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  transition: height 0.3s;
  border-radius: 15rpx;
}

.option {
  display: block;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  background: #fff;
  padding: 10rpx;
  color: rgb(102, 102, 102);
  font-size: 28rpx;
}
.quxiao{
  float: left;
  margin-top: 20rpx;
  width: 50%;
  height: 80rpx ;
  line-height: 80rpx;
  text-align: center;
