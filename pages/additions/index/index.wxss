/* pages/additions/index/index.wxss */
page{
  width: 100%;
  height:100%;
  background: #F5F5F5;
}
.wraper{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}
.header{
  color: #fff;
}
.search-box{
  background: #fff;
}
.search{
  height: 80rpx;
  padding:15rpx 0rpx;
}
.search-input{
  background: #E9E9E9;
 
  border-radius: 15rpx;
  height: 50rpx;
}
.search-input input{
  height: 50rpx;
  line-height: 50rpx ;
  text-align: center;
  font-size: 28rpx;
}
.search-inc{
  display:inline-block;
  margin-left: 50rpx;

  height: 50rpx;
  
}
.search-inc image{
  padding: 5rpx;
  background: #E9E9E9;
  border-radius: 50%;
  float: left;
  width: 45rpx;
  height: 45rpx;
}
.banner image{
  margin-top: 10rpx;
  width: 100%;
  height: 250rpx;
  border-radius: 25rpx;
}
.list-tel{
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  font-weight: 600;
}
.list-tel-img{
  width: 55rpx;
  height: 55rpx;
  position: relative;
  top: 5rpx;
  right: 0rpx;
}
.main{
  flex: 1;
  margin-top: 20rpx;
  position: relative;
}
.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.card{
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.card-box{
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
  background: #ccc;
}
.card-content{
  color: blue;
}
.list{
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 4px 4px 0 rgba(0,0,0,0.2);
  padding: 10rpx 50rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.list-usrename{
  height: 110rpx;
}
.list-usrename .name{
  color: #333;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap
}
.list-usrename .tel,.add{
  color: #666;
  font-size: 20rpx;
}
.list-inp{
  height: 110rpx;
  padding-top: 35rpx;
}
.list-bt{
  height: 40rpx;
  width: 150rpx;
  letter-spacing: 1rpx;
  background: #4F76B9;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 25rpx;
}
.footer{
  background: #fff;
  color: #fff;
  line-height: 100rpx;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
}
/* <!-- 新增弹框部分 --> */
.newadd{
  color: #3C67B1;
  font-size: 38rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  text-align: center;
  margin-top: 50rpx;
}
.add-list{
  margin-top: 20rpx;
  background: #F4F6FA;
  
}
.add-inp{
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  color: #333333;
  font-size: 32rpx;
}
.add-inp-v{
  padding-top: 25rpx;
}
.add-inp-v-inp{
  height: 50rpx;
  width: 100%;
  line-height: 50rpx;
  text-align: center;
  color: #333333;
  font-size: 32rpx;
  border: 1rpx solid #3C67B1;
  border-radius: 15rpx;
}

.add-inp-v-in {
  height: 150rpx;
  text-align: center;
  color: #333333;
  font-size: 32rpx;
  border: 1rpx solid #3C67B1;
  border-radius: 15rpx;
  margin-bottom: 10rpx;
}
.add-inp-v-text{
  width: 98%;
  max-height: 150rpx;
  text-align: left;
  color: #333333;
  font-size: 32rpx;
  border: 1rpx solid #3C67B1;
  border-radius: 15rpx;
  margin-bottom: 10rpx;
  padding: 15rpx;
}
/* 下拉选择 */
.select_box {
  background: #F3FBFE;
  text-align: center;
  width: 100%;
  margin: 0 auto;
  margin-top: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;

  /* padding: 0 20rpx; */
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: #333;
  line-height: 50rpx;
  text-align: center;
  height: 50rpx;
  border: 1rpx solid #3C67B1;
  border-radius: 15rpx;
}



.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  z-index: 8888;
  top: 50rpx;
  width: 100%;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  transition: height 0.3s;
  border-radius: 15rpx;
}

.option {
  display: block;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  background: #F3FBFE;
  padding: 10rpx;
  color: rgb(102, 102, 102);
  font-size: 28rpx;
}
.bottom{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 100rpx;
}
.quxiao{
  float: left;
  margin-top: 20rpx;
  margin-left: 25%;
  width: 150rpx;
  height: 60rpx ;
  line-height: 60rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  background: #E5E5E5;
  border-radius: 15rpx;
}
.queding{
  float: right;
  margin-right: 25%;
  margin-top: 20rpx;
  width: 150rpx;
  height: 60rpx ;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background: #3C67B1;
  border-radius: 15rpx;
}