/* pages/additions/index/index.wxss */
page{
  width: 100%;
  height:100%;
  background: #F5F5F5;
  padding-bottom: 20rpx;
}
.focus{
 display: flex;
 flex-direction:column
}
.header{
  position: fixed;
  top:0rpx;
  left:  0rpx;
  background: #F5F5F5;
  /* display: flex;
  flex-direction: row; */
}
.search-box{
  background: #fff;
}
.search{
  height: 80rpx;
  padding:15rpx 0rpx;
}
.search-input{
  background: #E9E9E9;
 
  border-radius: 15rpx;
  height: 50rpx;
}
.search-input input{
  height: 50rpx;
  line-height: 50rpx ;
  text-align: center;
  font-size: 28rpx;
}
.search-inc{
  display:inline-block;
  margin-left: 50rpx;

  height: 50rpx;
  
}
.search-inc image{
  padding: 5rpx;
  background: #E9E9E9;
  border-radius: 50%;
  float: left;
  width: 45rpx;
  height: 45rpx;
}
/* banner */
.banner{
  width: 100%;
  height: 250rpx;
  margin-top: 16rpx;
  margin-bottom: 10rpx;
}
.swiper{
  width: inherit;
  height: inherit;
}
.swiper swiper-item{
  box-sizing: border-box;
}
.swiper image{

  overflow: hidden;
  width: inherit;
  height: inherit;
  background-color: #eee
}
/* banner结束 */
.list-tel{
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:center;
  margin-top: 85rpx;
}

.main{
  margin-top: 420rpx;
  display: flex;
  flex-direction:column;
  padding-bottom: 20rpx;  
  height: 80%;
}

.card{
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.list{
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 4px 4px 0 rgba(0,0,0,0.2);
  padding: 10rpx 50rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
}
.list-usrename{
  height: 110rpx;
}
.list-usrename .name{
  color: #333;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-top: 20rpx;
}
.list-usrename .tel,.add{
  color: #666;
  font-size: 20rpx;
  margin-top: 10rpx;
}
.list-inp{
  height: 110rpx;
  padding-top: 35rpx;
}
.list-bt{
  height: 40rpx;
  width: 150rpx;
  letter-spacing: 1rpx;
  background: #4F76B9;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 25rpx;
}
.null {
  height: 300rpx;
  margin-top: 30rpx;
  background-size:100% 100%;
}
.null image{
  width: 100%;
  height: 100%;
}
/* <!-- 新增弹框部分 --> */
.newadd{
  color: #3C67B1;
  font-size: 38rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  text-align: center;
  margin-top: 50rpx;
}
.add-list{
  margin-top: 20rpx;
  background: #F4F6FA;
  
}
.add-inp{
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
