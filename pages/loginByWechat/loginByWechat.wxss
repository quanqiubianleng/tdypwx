.content{
  width: 100%;
  padding: 96rpx 40rpx 0;
  box-sizing: border-box;
}
.content .logo{
  width: 202rpx;
  height: 202rpx;
  display: block;
  margin: 0 auto
}
.content .formGroup{
  width: 100%;
  margin-top: 80rpx
}
.checkBox{
  padding: 32rpx 0;
  font-size: 24rpx;
  color: #666F83;
  text-align: center;
}
.checkBox checkbox-group{
  display: inline
}
.checkBox navigator{
  display: inline;
  color: #2A4DEF
}
.checkBox checkbox .wx-checkbox-input{
  width: 28rpx;
  height: 28rpx;
}
.checkBox checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  transform: translate(-50%, -50%) scale(.5);
  -webkit-transform: translate(-50%, -50%) scale(.5);
}
.content .loginBtn{
  height: 88rpx;
  border-radius: 44rpx;
  background: #2E54EB;
  font-size: 36rpx;
  line-height: 88rpx;
  text-align: center;
  color: white;
  font-weight: bold;
  margin-top: 100rpx
}
.content .loginBtn::after{
  border: none;
}
.content .loginBtn[disabled]{
  background: rgba(46, 84, 235, .5);
  color: white;
}

/* 弹框 */

.bg {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);

}
 
.show {
  text-align: center;
  position: absolute;
  top: 30%;
  left: 15%;
  width: 70%;
  height: 40%;
  
  z-index: 1002;
  overflow: auto;
}
.show-diy{
  border-radius: 5%;
  margin-top: 80rpx;
  background: #fff;
  width: 80%;
  height: 80%;
  margin-left:10% ;
}
.show-img{
  position: relative;
  z-index: 1003;
  top: -70rpx;
  width: 70%;
  height: 70%;
}
.show-imgs{
  position: relative;
