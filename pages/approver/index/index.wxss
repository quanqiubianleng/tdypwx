/* pages/approver/index/index.wxss */
page{
  width: 100%;
  height:100%;
  background: #F5F5F5;
}
.wraper{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}
.header {
  position: fixed;
  background: #F5F5F5;
  top: 0;
  left: 0;
  z-index: 999999;
  color: #fff;
  width: 100%;
}

.search-box {
  background: #fff;
}

.search {
  height: 80rpx;
  padding: 15rpx 0rpx;
}

.search-input {
  background: #E9E9E9;
  border-radius: 15rpx;
  height: 50rpx;
}

.search-input input {
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #000;
 
  font-size: 28rpx;
}

.search-inc {
  display: inline-block;
  margin-left: 50rpx;
  height: 50rpx;

}

.search-inc image {
  padding: 5rpx;
  background: #E9E9E9;
  border-radius: 50%;
  float: left;
  width: 45rpx;
  height: 45rpx;
}

 /* banner */
 .banner{
  width: 100%;
  height: 250rpx;
  margin-top: 16rpx;
  margin-bottom: 10rpx;
}
.swiper{
  width: inherit;
  height: inherit;
}
.swiper swiper-item{
  padding: 0 32rpx;
  box-sizing: border-box;
}
.swiper image{
  border-radius: 16rpx;
  overflow: hidden;
  width: inherit;
  height: inherit;
  background-color: #eee
}
/* banner结束 */

.list-tel {
  height: 80rpx;
}
.list-tel-ul{
  height: 50rpx;
  margin-top: 15rpx;

  border-radius: 30rpx;
}
.list-tel-ul-ui{
  background:#2FB9EF ;
  border-radius: 10rpx;
  height: 48rpx;
  margin-right: 10rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
}
.on{
  background:red ;
}
.list-tel-tel{
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  font-weight: 600;
 
}
.main{
  flex: 1;
  position: relative;
  top: 420rpx;
}
.main-scroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.card {
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.card-box {
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
  background: #ccc;
}

.card-content {
  color: blue;
}

.list {
  height: 130rpx;
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.2);
  padding: 10rpx 50rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.list-usrename {
  height: 110rpx;
}

.list-usrename .name {
  color: #333;
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
}

.list-usrename .tel {
  color: #666;
  margin-top: 15rpx;
  font-size: 30rpx;
}

.list-inp {
  height: 110rpx;
  padding-top: 35rpx;
}

.list-bt {
  height: 40rpx;
  width: 150rpx;
  letter-spacing: 1rpx;
  background: #F8DCDC;
  color: #DC4F4E;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 25rpx;
}

/* 弹框 */
.popup {
  border-radius: 15rpx;
}

.bottom {
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 100rpx;
}

.popup-text {
  margin-top: 50rpx;
  font-size: 46rpx;
  font-weight: 600;
  text-align: center;
}
.footer{
  color: #fff;
  line-height: 30rpx;
  flex: 0 0 30rpx; /* 不放大不缩小固定100rpx */
}