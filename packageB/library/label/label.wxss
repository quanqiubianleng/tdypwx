/* packageB/library/remarks/remarks.wxss */
page{
  background: #F5F5F5;
}
.label{
  margin-top: 20rpx;
  text-align: left;
  color: #333333;
  font-size: 30rpx;
  font-weight:600 ;
}
.inp{
  margin-top: 20rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 10rpx;
}
.inp-in{
  height: 80rpx;
  
}
.inp-in input{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  padding-left: 10rpx;
}
.inp-ti{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  text-align: right;
  padding-right: 10rpx;
}
.label-box{
  margin-top: 10rpx;
  background: #fff;
  border-radius: 15rpx;
  padding-bottom: 20rpx;
}

.label-view{
float: left;
  width: 80rpx;
  height: 80rpx;
  padding: 10rpx;
  border-radius: 50%;
  margin-top: 25rpx;
  margin-left: 5%;
}
.label-box .active-del{
  display: none;
}
.active{
  line-height: 80rpx;
  text-align: center;
  color: red;
}
.active-view{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.bt{
  position: fixed;
  bottom: 20rpx;
  z-index: 999;
  margin-top: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  background: #31AFDF;
}